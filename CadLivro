public class CadLivro {

    private String titulo;
    private String autor;
    private String editora;
    private int numPags;
    private int pagAtual = 0;

    public CadLivro(String titulo, String autor, String editora, int numPags, int pagAtual) {
        this.titulo = titulo;
        this.autor = autor;
        this.editora = editora;
        this.pagAtual = pagAtual;
        this.numPags = numPags;
    }

    public void getTitulo(String titulo) { // get = public void...(tipo n)/this
        this.titulo = titulo;
    }

    public String setTitulo() { // set = public tipo...()/return
        return titulo;
    }
//---------------------------

    public void getAutor(String autor) {
        this.autor = autor;
    }

    public String setAutor() {
        return autor;
    }
//---------------------------

    public void getEditora(String editora) {
        this.editora = editora;
    }

    public String setEditora() {
        return editora;
    }
//---------------------------

    public void getNumPags(int numPags) {
        this.numPags = numPags;
    }

    public int setNumPags() {
        return numPags;
    }
//---------------------------

    public void getPagAtual(int pagAtual) {
        this.pagAtual = pagAtual;
    }
        
    public int setPagsAtual() {
        return pagAtual;
    }
    public double virarPagina(){
        return ++pagAtual;
    } 
}

//---------------------------------------


